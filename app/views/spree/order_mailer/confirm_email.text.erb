<%if Spree::CustomEmailContent.where("lower(name) = ?", 'confirm_email').first.nil? %>
    <%= Spree.t('order_mailer.confirm_email.dear_customer') %>
    
    <%= Spree.t('order_mailer.confirm_email.bid_place_message') %>
    
    <%= Spree.t('order_mailer.confirm_email.thanks') %>
<%else%>
    <% body = Spree::CustomEmailContent.where("lower(name) = ?", 'confirm_email').first.body%>
    <% content = body[I18n.locale] || body.values.first || "" %>
    <% @content = raw content%>
    <%= @content.html_safe%>
<%end%>


