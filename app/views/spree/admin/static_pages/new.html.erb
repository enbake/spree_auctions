<%= form_for [:admin, @static_page] do |f| %>
<table class = "no_border">
    <tr class="no_border">
        <td class="no_border">
            <%= f.label :title %>
        </td>
        <td class="no_border">
            <%= f.text_field :title %>
        </td>
    </tr>
    <tr class="no_border">
        <td class="no_border">
            <%= f.label :Description %>
        </td>
        <td class="no_border">
            <%= f.text_area :description, :rows => 5, :cols => 115 %>
        </td>
    </tr>
    <tr>
    	<td class="no_border"></td>
        <td class="no_border" colspan= "2" style="float:right;">
            <%= f.submit 'Save' %>
        </td>
    </tr>
</table>
<% end %>
